{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-compose-up",
      "type": "shell",
      "command": "docker compose up -d && echo 'infra-ready'",
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "docker",
        "pattern": { "regexp": "^$" },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*$",
          "endsPattern": "^.*infra-ready.*$"
        }
      }
    },
    {
      "label": "frontend-dev",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "codeforge",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE|vite.*$",
          "endsPattern": "^.*Local:.*http.*$"
        }
      }
    },
    {
      "label": "prepare-stack",
      "dependsOn": ["docker-compose-up", "frontend-dev"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": { "reveal": "silent" }
    }
  ]
}
