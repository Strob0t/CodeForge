{
  "name": "CodeForge Dev",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "remoteEnv": {
    "HOST_PROJECT_PATH": "${localWorkspaceFolder}",
    "DATABASE_URL": "postgres://codeforge:codeforge_dev@codeforge-postgres:5432/codeforge?sslmode=disable",
    "NATS_URL": "nats://codeforge-nats:4222",
    "LITELLM_URL": "http://codeforge-litellm:4000",
    "LITELLM_MASTER_KEY": "sk-codeforge-dev"
  },
  "forwardPorts": [3000, 4000, 4222, 5173, 5432, 6280, 8001, 8080, 8222],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Go Core API",
      "onAutoForward": "silent"
    },
    "4000": {
      "label": "LiteLLM Proxy",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "4222": {
      "label": "NATS",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "golang.go",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "go.gopath": "/go",
        "go.toolsManagement.autoUpdate": true,
        "python.defaultInterpreterPath": "/workspaces/CodeForge/.venv/bin/python",
        "editor.formatOnSave": true,
        "dev.containers.mountWaylandSocket": false,
        "dev.containers.dockerCredentialHelper": false
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteUser": "vscode"
}
