    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-solid": "^0.14.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.0.0",
